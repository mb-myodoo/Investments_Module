<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_investor_report_ext">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
        <t t-call="web.extrenal_layout">
            <div hasclass="page">
                <div class="oe_structure"/>

                <div class="col-auto" name="report_name" style="text-align: center">
                    <h1 t-field="doc.name"/>
                </div>
                <br/>

                <div name="report_details">
                    <span class="col-auto">
                        <strong>Partner:</strong>
                        <p t-field="doc.partner_id"/>
                    </span>
                    <span class="col-auto">
                        <strong>Start Date:</strong>
                        <p t-field="doc.start_date" widget="date"/>
                    </span>
                    <span class="col-auto">
                        <strong>End Date:</strong>
                        <p t-field="doc.end_date" widget="date"/>
                    </span>
                </div>
                <br/>

                <table class="table table-sm o_main_table" style="border-collapse: collapse; border: 1px solid #000000">
                    <thead style="display: table-row-group">
                        <tr class="text-center">
                            <th name="th_name" style="border: 1px solid #000000">Name</th>
                            <th name="th_partner_id" style="border: 1px solid #000000">Partner</th>
                            <th name="th_date_order" style="border: 1px solid #000000">Date</th>
                            <th name="th_amount_untaxed" style="border: 1px solid #000000">Untaxed Amount</th>
                            <th name="th_amount_total" style="border: 1px solid #000000">Total Amount</th>
                        </tr>
                    </thead>

                    <tbody clas="sale_tbody">
                        <t t-foreach="doc.values" t-as="values">
                            <tr class="text-left" style="outline: thin solid black">
                                <td style="border: 1px solid #000000" name="th_name">
                                    <span t-field="values.name"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
    <template id="investor_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="investments_module.report_investor_report_ext" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>


