<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="investor_report_action" model="ir.actions.act_window">
            <field name="name">Investor Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">investor_report</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="investor_report_tree_view" model="ir.ui.view">
            <field name="name">investor.report.tree.view</field>
            <field name="model">investor_report</field>
            <field name="arch" type="xml">
                <tree string="Reports">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
                <field name="values">
                    <tree>
                        <field name="amount_untaxed"/>
                        <field name="amount_total"/>
                    </tree>
                </field>
            </field>
        </record>

        <record id="action_investor_report_view_tree" model="ir.actions.act_window.view">
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="investor_report_form_tree_view"/>
            <field name="act_window_id" ref="action_investor_report"/>
        </record>

        <menuitem id="menu_investor_report" name="Investor Report" parent="sale.menu_sale_report" action="investor_report_action"/>
</odoo>