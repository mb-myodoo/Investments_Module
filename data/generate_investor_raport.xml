<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="generate_investor_report_cron" model="ir.cron">
            <field name="name">Generate Investor Report</field>
            <field name="model_id" ref="model_investor_report"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_investor_report()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(day=1, hour=0, minute=0, second=0) + relativedelta(months=1))"/>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>